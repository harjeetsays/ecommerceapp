<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CustomerProfileFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/theme_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".78"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/theme_upper_curve">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Profile Details"
            android:fontFamily="@font/baloo_bhaina"
            android:textColor="@color/theme"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Name"
               android:textStyle="bold"
               android:fontFamily="@font/baloo_bhaina"
               android:textSize="18sp"/>


            //////////////user name//////////////
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="harjeet"
                android:fontFamily="@font/baloo_bhaina"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:fontFamily="@font/baloo_bhaina"
                android:textSize="18sp"/>

            //////////////user email//////////////
            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="harjeet@gmail"
                android:fontFamily="@font/baloo_bhaina"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone no."
                android:textStyle="bold"
                android:fontFamily="@font/baloo_bhaina"
                android:textSize="18sp"/>

            //////////////user no//////////////
            <TextView
                android:id="@+id/user_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="harjeet"
                android:fontFamily="@font/baloo_bhaina"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                android:fontFamily="@font/baloo_bhaina"
                android:textSize="18sp"/>

            //////////////user address//////////////
            <TextView
                android:id="@+id/user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="l.c.t. hmfdf"
                android:fontFamily="@font/baloo_bhaina"/>

            //update button
            <Button
                android:id="@+id/update_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="update"
                android:textSize="20dp"
                android:fontFamily="@font/baloo_bhaina"
                android:background="@drawable/button"
                android:elevation="5dp"/>

            <TextView
                android:id="@+id/log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="logout?"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:paddingTop="5dp"
                android:textColor="#696969"/>


        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toTopOf="@id/cl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView2"
        app:layout_constraintVertical_bias=".3" />



</androidx.constraintlayout.widget.ConstraintLayout>